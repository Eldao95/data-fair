{
  "title": "Settings",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "type"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identifier of the owner of this settings"
    },
    "type": {
      "type": "string",
      "enum": ["user", "organization"],
      "description": "If the owner is a user or an organization"
    },
    "webhooks": {
      "type": "array",
      "description": "List of webhooks",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "events", "url"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title of the external service called"
          },
          "events": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "The event type that triggers this webhook"
            }
          },
          "url":{
            "type": "string",
            "description": "The URL to call"
          }
        }
      }
    },
    "licenses": {
      "type": "array",
      "description": "List of licenses",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "href"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Short title for the license"
          },
          "href":{
            "type": "string",
            "description": "The URL where the license can be read"
          }
        }
      }
    },
    "catalogs": {
      "type": "array",
      "description": "List of catalog connections",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["url", "apiKey"],
        "properties": {
          "url":{
            "type": "string",
            "description": "The root URL of the catalog"
          },
          "type": {
            "type": "string",
            "description": "The type of catalog (udata, ckan, etc.)",
            "enum": ["udata"]
          },
          "apiKey":{
            "type": "string",
            "description": "The API key to use when interacting with the catalog for this owner"
          },
          "organizationId": {
            "type": "string",
            "description": "Leave empty to write in a personnal space, otherwise use the id of an organization that you have the right to write into."
          }
        }
      }
    },
    "operationsPermissions":{
      "type": "object"
    }
  }
}
